@using RockPaperScissorsFrontend.Models
@using RockPaperScissorBusinessLayer;
@model GameModel

@{
    ViewData["Title"] = "Game";
}


<div class="text-center">
    <h1>Best of luck!</h1>
    <div class="containerDiv">


        <div class="container1">
            <p class="blocktext">Computer Wins!</p>
        </div>
        <div class="containerContent">
            <div class="child">
                <p class="pc">Player 1: </p>
                <div>

                    <div onclick="testMethod('Rock')">Rock</div>
                    <div onclick="testMethod('Paper')">Paper</div>
                    <div onclick="testMethod('Scissors')">Scissors</div>
                </div>
            </div>
            <div class="child">
                <p class="pc">Player 2: </p>
            </div>
        </div>
    </div>

    <button class="btn-lg" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
</div>

<p>Player One move</p>
<p id="player1Move">@Model.playerOne.Move</p>

<p>Player two move</p>
<p id="player2Move">@Model.playerTwo.Move</p>

<p >Result</p>
<p id="result">@Model.result</p>



@using RockPaperScissorsFrontend.Models
@model GameModel

@{
    ViewData["Title"] = "Game";
}


<div class="text-center">

    <h1>Best of luck!</h1>
    <div class="containerDiv">
        <div class="container1">
            <p class="blocktext">Computer Wins!</p>
        </div>

        <div class="containerContent">
            <div class="child">
                <p class="pc">Player 1: </p>

                <div>

                </div>
            </div>
            <div class="child">
                <p class="pc">Player 2: </p>
            </div>
        </div>
    </div>

    <button class="btn-lg" onclick="location.href='@Url.Action("Index", "Home")'">Home</button>
</div>

    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm())
            {
                <br /><br />
        
                      <fieldset>
                          <legend>@Model.playerOne.PlayerName</legend>
                          <label>@Html.RadioButtonFor(m => m.playerOne.Move, Move.rock) Rock</label>
                          <label>@Html.RadioButtonFor(m => m.playerOne.Move, Move.paper) Paper</label>
                          <label>@Html.RadioButtonFor(m => m.playerOne.Move, Move.scissors) Scissor</label>
                      </fieldset>

                <br /><br />

                <fieldset>
                    <legend>@Model.playerTwo.PlayerName</legend>
                    <label>@Html.TextBoxFor(m => m.playerTwo.Move) computer</label>
                </fieldset>

                <br /><br />
                <h3>@Model.result</h3>
                <input type="submit" class="btn-primary btn-lg" value="Play"/>
            }
        </div>
    </div>

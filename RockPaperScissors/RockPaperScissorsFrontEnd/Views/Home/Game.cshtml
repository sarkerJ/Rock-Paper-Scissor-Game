<script>
    function testMethod( value)
    {
        if (value == "Rock")
        {
            $.post("@Url.Action("Game", "Home", new { move = Movess.Rock})", function ( gameJsonName)
            {
                document.querySelector("#player1Move").innerHTML = gameJsonName.playerOne;
                document.querySelector("#player2Move").innerHTML = gameJsonName.playerTwo;
                $("#result").innerHTML = gameJsonName.result;
                
            });
        }
    }

</script>